h2.page-title 参加イベント一覧


section
  -@event_apps.each do |event_app|
    dl.event
      dt
        p= event_app.event.event_name
      dd
        - if event_app.event.photo_url1?
           p.title-img=image_tag event_app.event.photo_url1.url,:class => 'img-thum'
        - else
           p.title-img=image_tag 'no-image.png',:class => 'img-thum'      
        p= "開催日時: #{event_app.event.event_date.strftime('%Y年%m月%d日')}"        p= "主催者：　#{event_app.event.user.name}"
        ul.event-app-btn-list
          li= link_to '詳細',event_path(event_app.event),{:class=>"btn-min"}
          li= link_to 'チャット',{:controller=>'event_chats',:action=>'index',event_id: event_app.event_id},{:class=>'btn-min'}
          li= link_to '出店情報',{:controller=>'stores',:action=>'index',event_app_id: event_app.id},{:class=>"btn-min"}
          - if event_app.event.user.id == current_user.id
            li= link_to 'イベント編集',edit_event_path(event_app.event),:class=>"btn-min"
br        
p.event-new= link_to 'イベントを新規作成',new_event_path, {:class => "btn"} 